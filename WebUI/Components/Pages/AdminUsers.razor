@page "/admin/users"
@using ApiKnowledgePortal.Application.Common
@using ApiKnowledgePortal.Application.Users.Dtos
@using ApiKnowledgePortal.Application.Users.Commands
@using ApiKnowledgePortal.Application.SwaggerSources.Dtos
@using ApiKnowledgePortal.Domain.Users
@using WebUI.Services
@inject ApiClient ApiClient
@inject NavigationManager Navigation
@rendermode InteractiveServer


<div class="blazor-root">
    <h1>Управление пользователями</h1>

    <div class="mb-3 d-flex align-items-center">
        <label class="me-2">Items per page: </label>
        <select @bind="pageSize" @bind:event="onchange" @bind:after="PageSizeChanged" class="form-select d-inline w-auto me-4">
            @foreach (var size in pageSizeOptions)
            {
                <option value="@size">@size</option>
            }
        </select>
        <label class="me-2">Page: </label>
        <select @bind="page" @bind:event="onchange" @bind:after="PageChanged" class="form-select d-inline w-auto">
            @for (int i = 1; i <= TotalPages; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>

    @if (pagedResult is null)
    {
        <p>Loading...</p>
    }
    else if (!pagedResult.Items.Any())
    {
        <p>Пользователи не найдены.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Почта</th>
                    <th>Роль</th>
                    <th>Источники</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in pagedResult.Items)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>@string.Join(", ", user.Sources)</td>
                        <td>
                            <button class="btn btn-warning btn-sm me-1" @onclick="() => StartEditRole(user.Id, user.Role)">Изменить роль</button>
                            <button class="btn btn-info btn-sm me-1" @onclick="() => StartAddSource(user.Id)">Добавить источник</button>
                            <button class="btn btn-secondary btn-sm me-1" @onclick="() => StartRemoveSource(user.Id)">Удалить источник</button>
                            <button class="btn btn-danger btn-sm" @onclick="() => ShowDeleteConfirm(user.Id)">Удалить</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-2">
            <button class="btn btn-primary" @onclick="PrevPage" disabled="@IsFirstPage">Previous</button>
            <span>Page @pagedResult.Page of @TotalPages</span>
            <button class="btn btn-primary" @onclick="NextPage" disabled="@IsLastPage">Next</button>
        </div>
    }

    @if (editingUserId != null && editingRole)
    {
        <div class="modal-backdrop-custom" @onclick="CancelEdit">
            <div class="modal-container" @onclick:stopPropagation>
                <div class="card p-3" style="min-width: 400px;">
                    <h5>Изменить роль</h5>
                    <select class="form-select" @bind="newRole">
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                    </select>
                    <div class="d-flex justify-content-end mt-3">
                        <button class="btn btn-primary me-2" @onclick="SaveRole">Save</button>
                        <button class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (editingUserId != null && addingSource)
    {
        <div class="modal-backdrop-custom" @onclick="CancelEdit">
            <div class="modal-container" @onclick:stopPropagation>
                <div class="card p-3" style="min-width: 400px;">
                    <h5>Добавить источник</h5>
                    <select class="form-select" @bind="selectedSourceId">
                        <option value="">-- Выберите источник --</option>
                        @foreach (var source in allSources)
                        {
                            <option value="@source.Id">@source.Name</option>
                        }
                    </select>
                    <div class="d-flex justify-content-end mt-3">
                        <button class="btn btn-primary me-2" @onclick="SaveAddSource">Add</button>
                        <button class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (editingUserId != null && removingSource)
    {
        <div class="modal-backdrop-custom" @onclick="CancelEdit">
            <div class="modal-container" @onclick:stopPropagation>
                <div class="card p-3" style="min-width: 400px;">
                    <h5>Удалить источник</h5>
                    <select class="form-select" @bind="selectedSourceId">
                        <option value="">-- Выберите источник --</option>
                        @foreach (var source in currentUserSourceObjects)
                        {
                            <option value="@source.Id">@source.Name</option>
                        }
                    </select>
                    <div class="d-flex justify-content-end mt-3">
                        <button class="btn btn-primary me-2" @onclick="SaveRemoveSource">Remove</button>
                        <button class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (showDeleteConfirm)
    {
        <div class="modal-backdrop-custom">
            <div class="modal-container">
                <div class="card p-3" style="min-width: 300px;">
                    <h5>Подтвердить удаление</h5>
                    <p>Вы уверены, что хотите удалить пользователя?</p>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-danger me-2" @onclick="ConfirmDelete">Да</button>
                        <button class="btn btn-secondary" @onclick="CancelDelete">Нет</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .modal-backdrop-custom {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
        z-index: 1050;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .modal-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }
</style>

@code {
    private PagedResult<UserDto>? pagedResult;
    private int page = 1;
    private int pageSize = 10;
    private readonly int[] pageSizeOptions = new[] { 5, 10, 25, 50 };
    private int TotalPages => (int)Math.Ceiling((pagedResult?.TotalCount ?? 0) / (double)pageSize);
    private bool IsFirstPage => page <= 1;
    private bool IsLastPage => page >= TotalPages;

    private Guid? editingUserId;
    private bool editingRole = false;
    private bool addingSource = false;
    private bool removingSource = false;
    private UserRole newRole;
    private Guid selectedSourceId;
    private List<SwaggerSourceDto> allSources = new();
    private List<SwaggerSourceDto> currentUserSourceObjects = new();
    private List<Guid> currentUserSources = new();
    private bool showDeleteConfirm = false;
    private Guid deleteTargetId;

    protected override async Task OnInitializedAsync()
    {
        await LoadPageAsync();
        allSources = await ApiClient.GetActiveSwaggerSourcesAsync();
    }


    private async Task LoadPageAsync()
    {
        try
        {
            pagedResult = await ApiClient.GetUsersPagedAsync(page, pageSize);
        }
        catch
        {
            pagedResult = new PagedResult<UserDto> { Items = new List<UserDto>(), TotalCount = 0 };
        }
    }

    private async Task PrevPage() { if (!IsFirstPage) { page--; await LoadPageAsync(); } }
    private async Task NextPage() { if (!IsLastPage) { page++; await LoadPageAsync(); } }
    private async Task PageSizeChanged() { page = 1; await LoadPageAsync(); }
    private async Task PageChanged() => await LoadPageAsync();

    private void StartEditRole(Guid id, UserRole currentRole)
    {
        editingUserId = id;
        newRole = currentRole;
        editingRole = true;
    }

    private async Task SaveRole()
    {
        var command = new UpdateUserRoleCommand(editingUserId.Value, newRole);
        await ApiClient.UpdateUserRoleAsync(command);
        editingRole = false;
        editingUserId = null;
        await LoadPageAsync();
    }

    private void StartAddSource(Guid id)
    {
        editingUserId = id;
        addingSource = true;
    }

    private async Task SaveAddSource()
    {
        if (selectedSourceId != Guid.Empty)
        {
            var command = new AddSourceToUserCommand(editingUserId.Value, selectedSourceId);
            await ApiClient.AddSourceToUserAsync(command);
            addingSource = false;
            editingUserId = null;
            await LoadPageAsync();
        }
    }

    private async Task StartRemoveSource(Guid id)
    {
        editingUserId = id;
        var user = await ApiClient.GetUserByIdAsync(id);

        // загружаем полные объекты источников по их id
        currentUserSourceObjects = allSources
            .Where(s => user.Sources.Contains(s.Id))
            .ToList();

        removingSource = true;
    }

    private async Task SaveRemoveSource()
    {
        if (selectedSourceId != Guid.Empty)
        {
            var command = new RemoveSourceFromUserCommand(editingUserId.Value, selectedSourceId);
            await ApiClient.RemoveSourceFromUserAsync(command);
            removingSource = false;
            editingUserId = null;
            await LoadPageAsync();
        }
    }

    private void CancelEdit()
    {
        editingUserId = null;
        editingRole = false;
        addingSource = false;
        removingSource = false;
    }

    private void ShowDeleteConfirm(Guid id)
    {
        deleteTargetId = id;
        showDeleteConfirm = true;
    }

    private async Task ConfirmDelete()
    {
        await ApiClient.DeleteUserAsync(deleteTargetId);
        showDeleteConfirm = false;
        await LoadPageAsync();
    }

    private void CancelDelete() => showDeleteConfirm = false;
}