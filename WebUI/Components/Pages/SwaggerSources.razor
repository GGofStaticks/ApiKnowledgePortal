@page "/swaggersources"
@using ApiKnowledgePortal.Application.Common
@using ApiKnowledgePortal.Application.SwaggerSources.Dtos
@using ApiKnowledgePortal.Application.SwaggerSources.Commands
@using WebUI.Services
@inject ApiClient ApiClient

<div class="blazor-root">
    <h1>Swagger Sources</h1>

    <div class="mb-4 p-4 border rounded bg-light">
        <h4 class="mb-3">Управление fetch и парсингом</h4>
        <div class="d-flex flex-wrap gap-3 align-items-end">
            <div class="flex-grow-1">
                <label class="form-label fw-bold">Выберите источник:</label>
                <select class="form-select" @bind="selectedSourceId">
                    <option value="">-- Выберите источник --</option>
                    @foreach (var src in activeSources ?? new List<SwaggerSourceDto>())
                    {
                        <option value="@src.Id">@src.Name (@src.Url)</option>
                    }
                </select>
            </div>

            @if (selectedSourceId.HasValue)
            {
                <button class="btn btn-primary" @onclick="() => FetchOne(selectedSourceId.Value)" disabled="@isFetching">
                    @(isFetching ? "Выполняется..." : "Fetch + Parse выбранного")
                </button>
            }

            @if ((activeSources?.Any() ?? false))
            {
                <button class="btn btn-success" @onclick="FetchAll" disabled="@isFetching">
                    @(isFetching ? "Выполняется..." : "Fetch + Parse всех активных")
                </button>
            }
        </div>

        @if (!string.IsNullOrEmpty(fetchMessage))
        {
            <div class="alert @(fetchMessage.Contains("Ошибка") ? "alert-danger" : "alert-info") mt-3">
                @fetchMessage
            </div>
        }
    </div>

    <div class="mb-3 d-flex align-items-center">
        <label class="me-2">Items per page: </label>
        <select @bind="pageSize" @bind:event="onchange" @bind:after="PageSizeChanged" class="form-select d-inline w-auto me-4">
            @foreach (var size in pageSizeOptions)
            {
                <option value="@size">@size</option>
            }
        </select>
        <label class="me-2">Page: </label>
        <select @bind="page" @bind:event="onchange" @bind:after="PageChanged" class="form-select d-inline w-auto">
            @for (int i = 1; i <= TotalPages; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>
    <button class="btn btn-success mb-3" @onclick="ShowAddForm">Add New Swagger Source</button>
    @if (showAddForm)
    {
        <div class="card mb-3 p-3">
            <h5>Add New Swagger Source</h5>
            <div class="mb-2"><label>Name:</label><input class="form-control" @bind="newSourceName" /></div>
            <div class="mb-2"><label>URL:</label><input class="form-control" @bind="newSourceUrl" /></div>
            <button class="btn btn-primary me-2" @onclick="AddSource">Save</button>
            <button class="btn btn-secondary" @onclick="HideAddForm">Cancel</button>
        </div>
    }
    @if (pagedResult is null)
    {
        <p>Loading...</p>
    }
    else if (!pagedResult.Items.Any())
    {
        <p>No Swagger sources found.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>URL</th>
                    <th>Active</th>
                    <th>Last Fetch</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var src in pagedResult.Items)
                {
                    <tr>
                        <td>@src.Id</td>
                        <td>@src.Name</td>
                        <td>@src.Url</td>
                        <td>@(src.IsActive ? "Yes" : "No")</td>
                        <td>@(src.LastFetchTime?.ToLocalTime().ToString("g") ?? "-")</td>
                        <td>@src.LastFetchStatus</td>
                        <td>
                            <button class="btn btn-warning btn-sm me-1" @onclick="() => StartEdit(src)">Edit</button>
                            <button class="btn btn-danger btn-sm" @onclick="() => ShowDeleteConfirm(src.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-between align-items-center mt-2">
            <button class="btn btn-primary" @onclick="PrevPage" disabled="@IsFirstPage">Previous</button>
            <span>Page @pagedResult.Page of @TotalPages</span>
            <button class="btn btn-primary" @onclick="NextPage" disabled="@IsLastPage">Next</button>
        </div>
    }
    @if (editingSource != null)
    {
        <div class="modal-backdrop-custom" @onclick="CancelEdit">
            <div class="modal-container" @onclick:stopPropagation>
                <div class="card p-3" style="min-width: 500px;">
                    <h5>Edit Swagger Source</h5>
                    <div class="mb-2"><label>Name:</label><input class="form-control" @bind="editingSource.Name" /></div>
                    <div class="mb-2"><label>URL:</label><input class="form-control" @bind="editingSource.Url" /></div>
                    <div class="mb-2">
                        <label>Active:</label>
                        <select class="form-control" @bind="editingSource.IsActive">
                            <option value="@true">Yes</option>
                            <option value="@false">No</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary me-2" @onclick="SaveEdit">Save</button>
                        <button class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (showDeleteConfirm)
    {
        <div class="modal-backdrop-custom">
            <div class="modal-container">
                <div class="card p-3" style="min-width: 300px;">
                    <h5>Confirm Delete</h5>
                    <p>Are you sure you want to delete this source?</p>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-danger me-2" @onclick="ConfirmDelete">Yes</button>
                        <button class="btn btn-secondary" @onclick="CancelDelete">No</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .modal-backdrop-custom {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
        z-index: 1050;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .modal-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }
</style>

@code {
    private PagedResult<SwaggerSourceDto>? pagedResult;
    private int page = 1;
    private int pageSize = 10;
    private bool showAddForm = false;
    private readonly int[] pageSizeOptions = new[] { 5, 10, 25, 50 };
    private int TotalPages => (int)Math.Ceiling((pagedResult?.TotalCount ?? 0) / (double)pageSize);
    private bool IsFirstPage => page <= 1;
    private bool IsLastPage => page >= TotalPages;
    private string newSourceName = "";
    private string newSourceUrl = "";
    private SwaggerSourceDto? editingSource;
    private bool showDeleteConfirm = false;
    private Guid deleteTargetId;

    private List<SwaggerSourceDto>? activeSources;
    private Guid? selectedSourceId;
    private bool isFetching = false;
    private string fetchMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadPageAsync();
        await LoadActiveSources();
    }

    private async Task LoadPageAsync()
    {
        pagedResult = await ApiClient.GetSwaggerSourcesPagedAsync(page, pageSize);
    }

    private async Task LoadActiveSources()
    {
        activeSources = await ApiClient.GetActiveSwaggerSourcesAsync();
    }

    private async Task PrevPage() { if (!IsFirstPage) { page--; await LoadPageAsync(); } }
    private async Task NextPage() { if (!IsLastPage) { page++; await LoadPageAsync(); } }
    private async Task PageSizeChanged() { page = 1; await LoadPageAsync(); }
    private async Task PageChanged() => await LoadPageAsync();

    private void ShowAddForm()
    {
        showAddForm = true;
        newSourceName = "";
        newSourceUrl = "";
    }

    private void HideAddForm() => showAddForm = false;

    private async Task AddSource()
    {
        var command = new CreateSwaggerSourceCommand(newSourceName, newSourceUrl);
        await ApiClient.CreateSwaggerSourceAsync(command);
        showAddForm = false;
        await LoadPageAsync();
        await LoadActiveSources(); 
    }

    private void StartEdit(SwaggerSourceDto src)
    {
        editingSource = src;
    }

    private void CancelEdit() => editingSource = null;

    private async Task SaveEdit()
    {
        if (editingSource != null)
        {
            var cmd = new UpdateSwaggerSourceCommand(
                editingSource.Id,
                editingSource.Name,
                editingSource.Url,
                editingSource.IsActive);
            await ApiClient.UpdateSwaggerSourceAsync(cmd);
            editingSource = null;
            await LoadPageAsync();
            await LoadActiveSources();
        }
    }

    private void ShowDeleteConfirm(Guid id)
    {
        deleteTargetId = id;
        showDeleteConfirm = true;
    }

    private async Task ConfirmDelete()
    {
        await ApiClient.DeleteSwaggerSourceAsync(deleteTargetId);
        showDeleteConfirm = false;
        await LoadPageAsync();
        await LoadActiveSources();
    }

    private void CancelDelete() => showDeleteConfirm = false;

    private async Task FetchOne(Guid sourceId)
    {
        await PerformFetch(async () => await ApiClient.FetchOneAsync(sourceId));
    }

    private async Task FetchAll()
    {
        await PerformFetch(async () => await ApiClient.FetchAllAsync());
    }

    private async Task PerformFetch(Func<Task> action)
    {
        isFetching = true;
        fetchMessage = "Запуск операции...";
        StateHasChanged();

        try
        {
            await action();
            fetchMessage = "Операция успешно запущена!";
            await LoadPageAsync();
        }
        catch (Exception ex)
        {
            fetchMessage = $"Ошибка: {ex.Message}";
        }
        finally
        {
            isFetching = false;
            StateHasChanged();
        }
    }
}