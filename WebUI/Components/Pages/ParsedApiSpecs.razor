@page "/parsedapispecs"
@using ApiKnowledgePortal.Application.Common
@using ApiKnowledgePortal.Application.SwaggerParser.Dtos
@using ApiKnowledgePortal.Application.SwaggerParser.Commands
@using WebUI.Services
@inject ApiClient ApiClient

<div class="blazor-root">
    <h1>Parsed API Specs</h1>

    <div class="mb-3 d-flex align-items-center">
        <label class="me-2">Items per page: </label>
        <select @bind="pageSize" @bind:event="onchange" @bind:after="PageSizeChanged" class="form-select d-inline w-auto me-4">
            @foreach (var size in pageSizeOptions)
            {
                <option value="@size">@size</option>
            }
        </select>

        <label class="me-2">Page: </label>
        <select @bind="page" @bind:event="onchange" @bind:after="PageChanged" class="form-select d-inline w-auto">
            @for (int i = 1; i <= TotalPages; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>

    <button class="btn btn-success mb-3" @onclick="ShowAddForm">Add New Parsed API Spec</button>

    @if (showAddForm)
    {
        <div class="card mb-3 p-3">
            <h5>Add New Parsed API Spec</h5>
            <div class="mb-2"><label>ApiSpecId:</label><input class="form-control" @bind="newSpec.ApiSpecId" /></div>
            <div class="mb-2"><label>Path:</label><input class="form-control" @bind="newSpec.Path" /></div>
            <div class="mb-2"><label>Method:</label><input class="form-control" @bind="newSpec.Method" /></div>
            <div class="mb-2"><label>OperationId:</label><input class="form-control" @bind="newSpec.OperationId" /></div>
            <div class="mb-2"><label>Summary:</label><input class="form-control" @bind="newSpec.Summary" /></div>
            <button class="btn btn-primary me-2" @onclick="AddSpec">Save</button>
            <button class="btn btn-secondary" @onclick="HideAddForm">Cancel</button>
        </div>
    }

    @if (pagedResult is null)
    {
        <p>Loading...</p>
    }
    else if (!pagedResult.Items.Any())
    {
        <p>No parsed API specs found.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id (PK)</th>         
                    <th>ApiSpecId</th>
                    <th>Path</th>
                    <th>Method</th>
                    <th>OperationId</th>
                    <th>Summary</th>
                    <th>CreatedAt</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var spec in pagedResult.Items)
                {
                    <tr>
                        <td>@spec.Id</td>                     
                        <td>@spec.ApiSpecId</td>
                        <td>@spec.Path</td>
                        <td>@spec.Method</td>
                        <td>@spec.OperationId</td>
                        <td>
                            @if (editingSpecId == spec.Id) 
                            {
                                <input class="form-control" @bind="editSummary" />
                            }
                            else
                            {
                                @spec.Summary
                            }
                        </td>
                        <td>@spec.CreatedAt.ToLocalTime()</td>
                        <td>
                            @if (editingSpecId == spec.Id)
                            {
                                <button class="btn btn-primary btn-sm me-1" @onclick="() => SaveEdit(spec.Id)">Save</button>
                                <button class="btn btn-secondary btn-sm" @onclick="CancelEdit">Cancel</button>
                            }
                            else
                            {
                                <button class="btn btn-warning btn-sm me-1" @onclick="() => StartEdit(spec.Id, spec.Summary)">Edit</button>
                                <button class="btn btn-danger btn-sm" @onclick="() => ShowDeleteConfirm(spec.Id)">Delete</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-2">
            <button class="btn btn-primary" @onclick="PrevPage" disabled="@IsFirstPage">Previous</button>
            <span>Page @pagedResult.Page of @TotalPages</span>
            <button class="btn btn-primary" @onclick="NextPage" disabled="@IsLastPage">Next</button>
        </div>
    }

    <!-- модальное окно подтверждения -->
    @if (showDeleteConfirm)
    {
        <div class="modal-backdrop-custom">
            <div class="modal-container">
                <div class="card p-3" style="min-width: 300px;">
                    <h5>Confirm Delete</h5>
                    <p>Are you sure you want to delete this record?</p>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-danger me-2" @onclick="ConfirmDelete">Yes</button>
                        <button class="btn btn-secondary" @onclick="CancelDelete">No</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .modal-backdrop-custom {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1050;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .modal-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }
</style>

@code {
    private PagedResult<ParsedApiSpecDto>? pagedResult;
    private int page = 1;
    private int pageSize = 10;
    private bool showAddForm = false;
    private readonly int[] pageSizeOptions = new[] { 5, 10, 25, 50 };
    private int TotalPages => (int)Math.Ceiling((pagedResult?.TotalCount ?? 0) / (double)pageSize);
    private bool IsFirstPage => page <= 1;
    private bool IsLastPage => page >= TotalPages;

    private Guid? editingSpecId = null; 
    private string editSummary = "";
    private ParsedApiSpecDto newSpec = new();
    private bool showDeleteConfirm = false;
    private Guid deleteTargetId;

    protected override async Task OnInitializedAsync() => await LoadPageAsync();

    private async Task LoadPageAsync()
    {
        pagedResult = await ApiClient.GetParsedApiSpecsPagedAsync(page, pageSize);
        StateHasChanged();
    }

    private async Task PrevPage() { if (!IsFirstPage) { page--; await LoadPageAsync(); } }
    private async Task NextPage() { if (!IsLastPage) { page++; await LoadPageAsync(); } }
    private async Task PageSizeChanged() { page = 1; await LoadPageAsync(); }
    private async Task PageChanged() => await LoadPageAsync();

    private void ShowAddForm() { showAddForm = true; newSpec = new(); }
    private void HideAddForm() => showAddForm = false;

    private async Task AddSpec()
    {
        await ApiClient.CreateParsedApiSpecAsync(newSpec);
        showAddForm = false;
        await LoadPageAsync();
    }

    private void StartEdit(Guid id, string currentSummary)
    {
        editingSpecId = id;
        editSummary = currentSummary;
    }

    private void CancelEdit()
    {
        editingSpecId = null;
        editSummary = "";
    }

    private async Task SaveEdit(Guid id)
    {
        var command = new UpdateParsedApiSpecCommand(id, editSummary);
        await ApiClient.UpdateParsedApiSpecAsync(command);
        editingSpecId = null;
        editSummary = "";
        await LoadPageAsync();
    }

    private void ShowDeleteConfirm(Guid id)
    {
        deleteTargetId = id;
        showDeleteConfirm = true;
    }

    private async Task ConfirmDelete()
    {
        await ApiClient.DeleteParsedApiSpecAsync(deleteTargetId);
        showDeleteConfirm = false;
        await LoadPageAsync();
    }

    private void CancelDelete() => showDeleteConfirm = false;
}