@page "/register"
@using ApiKnowledgePortal.Application.Users.Commands
@using Blazored.LocalStorage
@using WebUI.Services
@inject ApiClient ApiClient
@inject NavigationManager Navigation
@inject ILocalStorageService LocalStorage

<PageTitle>Регистрация</PageTitle>

<div class="container mt-5">
    <div class="card p-4" style="max-width: 500px; margin: 0 auto;">
        <h2 class="text-center mb-4">Регистрация</h2>

        <div class="mb-3">
            <label class="form-label">Имя</label>
            <input class="form-control" @bind="firstName" @bind:event="oninput" />
        </div>

        <div class="mb-3">
            <label class="form-label">Фамилия</label>
            <input class="form-control" @bind="lastName" @bind:event="oninput" />
        </div>

        <div class="mb-3">
            <label class="form-label">Почта</label>
            <input type="email" class="form-control" @bind="email" @bind:event="oninput" placeholder="example@mail.com" />
        </div>

        <div class="mb-3">
            <label class="form-label">Пароль</label>
            <input type="password" class="form-control" @bind="password" @bind:event="oninput" />
        </div>

        <button class="btn btn-success w-100" @onclick="HandleRegister" disabled="@isLoading">
            @(isLoading ? "Регистрация..." : "Зарегистрироваться")
        </button>

        <p class="text-center mt-3">
            Уже есть аккаунт? <a href="/login">Войти</a>
        </p>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger mt-3">@errorMessage</div>
        }
    </div>
</div>

@code {
    private string firstName = "";
    private string lastName = "";
    private string email = "";
    private string password = "";
    private string errorMessage = "";
    private bool isLoading = false;

    private async Task HandleRegister()
    {
        if (string.IsNullOrWhiteSpace(firstName) ||
            string.IsNullOrWhiteSpace(lastName) ||
            string.IsNullOrWhiteSpace(email) ||
            string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "Заполните все поля";
            return;
        }

        if (password.Length < 6)
        {
            errorMessage = "Пароль должен быть не менее 6 символов";
            return;
        }

        isLoading = true;
        errorMessage = "";
        StateHasChanged();

        try
        {
            var registerCommand = new RegisterUserCommand(firstName, lastName, email, password);
            await ApiClient.RegisterAsync(registerCommand);

            var loginCommand = new LoginUserCommand(email, password);
            var token = await ApiClient.LoginAsync(loginCommand);

            await LocalStorage.SetItemAsync("authToken", token);

            Navigation.NavigateTo("/", forceLoad: true);
        }
        catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Conflict)
        {
            errorMessage = "Пользователь с такой почтой уже существует";
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message.Contains("уже существует")
                ? "Пользователь с такой почтой уже существует"
                : "Ошибка регистрации: " + ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }
}